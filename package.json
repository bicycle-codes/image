{
  "name": "@nichoth/image",
  "directories": {
    "doc": "docs",
    "example": "example",
    "test": "test"
  },
  "type": "module",
  "description": "An image component",
  "version": "0.0.0",
  "main": "dist/index.ts",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js && cd test && npm i",
    "test": "npm run lint && npm run build-tests && cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build-esm": "esbuild src/*.ts --format=esm --keep-names --outdir=./dist --out-extension:.js=.js",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc",
    "//build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.15.18",
    "htm": "^3.1.1",
    "preact": "^10.13.2",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape-run": "^10.0.0",
    "tapzero": "^0.6.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*.jsx"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*.cjsx"
      ]
    }
  },
  "keywords": [
    "image"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/image.git"
  },
  "bugs": {
    "url": "https://github.com/nichoth/image/issues"
  },
  "homepage": "https://github.com/nichoth/image#readme",
  "dependencies": {
    "@cloudinary/url-gen": "^1.10.0"
  }
}
